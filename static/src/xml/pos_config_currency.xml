<odoo>
    <data>
        <record id="view_pos_config_form_currency" model="ir.ui.view">
            <field name="name">pos.config.form.currency</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <group>
                        <field name="available_currencies" widget="many2many_tags"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
